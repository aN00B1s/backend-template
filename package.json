{
	"name": "backend",
	"version": "1.0.0",
	"description": "",
	"main": ".build/app.js",
	"type": "module",
	"author": "",
	"license": "ISC",
	"scripts": {
		"start": "nodemon -d 0.5 -w .env -w src -x node --env-file=.env --import tsx/esm src/app.ts",
		"start:prod": "node --import tsx/esm src/app.ts",
		"start:prod:js": "node .build/app.js",
		"build": "tsc && tsc-alias && cp package*.json .build",
		"typecheck": "tsc --noEmit",
		"typegen:pg": "env-cmd pgtyped -w -c pgtyped.json",
		"lint": "xo",
		"lint:fix": "xo --fix",
		"update": "npm-check-updates",
		"update:force": "npm-check-updates -u"
	},
	"dependencies": {
		"@onmoon/pg-tx": "^1.0.8",
		"@pgtyped/query": "^2.3.0",
		"pg": "^8.11.3",
		"pino": "^8.16.1",
		"pino-pretty": "^10.2.3",
		"source-map-support": "^0.5.21",
		"tsx": "^3.14.0"
	},
	"devDependencies": {
		"@onmoon/eslint-config": "^1.0.12",
		"@pgtyped/cli": "^2.3.0",
		"@pgtyped/runtime": "^2.3.0",
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/pg": "^8.10.7",
		"@types/source-map-support": "^0.5.9",
		"env-cmd": "^10.1.0",
		"jest": "^29.7.0",
		"lint-staged": "^15.0.2",
		"nodemon": "^3.0.1",
		"npm-check-updates": "^16.14.6",
		"tsc-alias": "^1.8.8",
		"typescript": "^5.2.2",
		"xo": "^0.56.0"
	},
	"imports": {
		"#src/*": "./*"
	},
	"lint-staged": {
		"*.ts": "xo"
	},
	"xo": {
		"extends": "@onmoon",
		"prettier": true,
		"rules": {
			"no-unused-vars": "off",
			"@typescript-eslint/no-unused-vars": "warn",
			"no-await-in-loop": "off",
			"max-depth": "off",
			"capitalized-comments": "off",
			"unicorn/explicit-length-check": "off",
			"@typescript-eslint/naming-convention": "off",
			"no-warning-comments": "off",
			"import/extensions": "off",
			"complexity": "off",
			"n/file-extension-in-import": "off"
		}
	},
	"prettier": {
		"printWidth": 100,
		"useTabs": true,
		"singleQuote": true,
		"semi": false,
		"trailingComma": "all",
		"bracketSpacing": true
	}
}
