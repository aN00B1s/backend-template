{
	"name": "template",
	"version": "1.0.0",
	"description": "",
	"main": ".build/app.js",
	"type": "module",
	"author": "",
	"license": "ISC",
	"scripts": {
		"watch": "env-cmd tsc-watch --onSuccess \"tsx ./src/app.ts\"",
		"start": "env-cmd tsx watch --clear-screen=false ./src/app.ts",
		"start:dev": "env-cmd tsx ./src/app.ts",
		"start:prod": "tsx ./src/app.ts",
		"typecheck": "tsc --strict -t esnext --noEmit",
		"typegen:pg": "env-cmd pgtyped -c pgtyped.json --watch",
		"lint": "xo",
		"lint:fix": "xo --fix",
		"update": "npx npm-check-updates",
		"update:force": "npx npm-check-updates -u"
	},
	"lint-staged": {
		"*.ts": "xo"
	},
	"dependencies": {
		"@onmoon/pg-tx": "^1.0.7",
		"@pgtyped/query": "^2.1.0",
		"pg": "^8.10.0",
		"pino": "^8.11.0",
		"pino-pretty": "^10.0.0",
		"tsx": "^3.12.6"
	},
	"devDependencies": {
		"@onmoon/eslint-config": "^1.0.12",
		"@pgtyped/cli": "^2.1.0",
		"@pgtyped/runtime": "^2.1.0",
		"@types/pg": "^8.6.6",
		"env-cmd": "^10.1.0",
		"jest": "^29.5.0",
		"lint-staged": "^13.2.0",
		"tsc-watch": "^6.0.0",
		"typescript": "^5.0.2",
		"xo": "^0.53.1"
	},
	"xo": {
		"extends": "@onmoon",
		"prettier": true,
		"rules": {
			"no-unused-vars": "off",
			"@typescript-eslint/no-unused-vars": "warn",
			"no-await-in-loop": "off",
			"max-depth": "off",
			"capitalized-comments": "off",
			"unicorn/explicit-length-check": "off",
			"@typescript-eslint/naming-convention": "off",
			"no-warning-comments": "off",
			"import/extensions": "off",
			"complexity": "off"
		}
	},
	"prettier": {
		"prettier.printWidth": 120,
		"useTabs": true,
		"singleQuote": true,
		"semi": false,
		"trailingComma": "all",
		"bracketSpacing": true
	}
}
